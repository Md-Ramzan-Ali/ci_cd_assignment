name: CI Pipeline Dist Build
on: [push, pull_request]

jobs:
  build-test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout source
        uses: actions/checkout@v4

      - name: Install build tools
        run: sudo apt-get update && sudo apt-get install -y build-essential zip unzip

      - name: Build into dist
        run: |
          mkdir -p dist
          ls -la dist
          gcc -I./src -o dist/test_runner tests/testcase.c src/sign.c
          ./dist/test_runner || true

      - name: Package artifact
        run: |
          mkdir -p dist
          if [ -f dist/test_runner ]; then zip -j dist/artifact.zip dist/test_runner; fi

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: build-artifact
          path: dist/artifact.zip
